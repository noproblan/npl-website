    <script type="text/javascript">
      $(document).ready(function() {
          $('.extras').on('change', function(event) {
              event.preventDefault();
              var newextras = this.value;
              var dropdown = this;
              $.ajax({
                  type: 'GET',
                  url: '<?= $this->baseUrl('lan/ajaxextras') ?>',
                  data: "id="+$(this).attr('data-id')+"&newextras="+newextras,
                  success: function(data) {
                      var el = document.createElement('span');
                      el.style.color = "green";
                      el.style.fontWeight = "bold";
                      $(el).html("OK! Reload for updated prices")
                          .insertAfter($(dropdown))
                          .delay(1000)
                          .fadeOut(1500)
                          .queue(function(){
                              $(this).remove();
                          });
                  },
                  error: function () {
                      alert("Fehler! Hast du Netz? Ist der Server erreichbar?");
                  }
              });
          });

          $(".ticketstatus").click(function(event) {
              event.preventDefault();
              var newstatus = 'notpaid';
              if (this.checked) {
                newstatus = 'prepaid';
              }
              var checkbox = this;
              $.ajax({
                  type: 'GET',
                  url: '<?= $this->baseUrl('lan/ajaxticket/') ?>',
                  data: "id="+this.value+"&newstatus="+newstatus,
                  success: function (data) {
                      if (newstatus == 'notpaid') {
                          checkbox.checked = false;
                      } else {
                         checkbox.checked = true;
                      }
                      var el = document.createElement('span');
                      el.style.color = "green";
                      el.style.fontWeight = "bold";
                      $(el).html("OK!")
                          .insertAfter($(checkbox))
                          .delay(1000)
                          .fadeOut(1500)
                            .queue(function(){
                            $(this).remove();
                          });
                  },
                  error: function () {
                      alert("Fehler! Hast du Netz? Ist der Server erreichbar?");
                  }
              });
          });

      });
    </script>
